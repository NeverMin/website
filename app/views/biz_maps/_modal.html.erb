<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title"><%= @contact_title -%></h5>
      <p><%= @contact_subtitle -%></p>
    </div>
    <div class="modal-body">
      <div class="table-responsive">
        <table class="table table-striped table-bordered" style="" width="">
          <%= render partial: "contact_#{@contact_id}", locals: { need_collapse_in: true } %>
        </table>
      </div>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-primary" data-dismiss="modal"><%= t('.close') -%></button>
    </div>
  </div>
</div
